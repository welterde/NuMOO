CC	     = cc
# MOO is single-threaded, so don't burden us with locking
CFLAGS	     = -g -O3 -I. -W -Wall -UHAVE_PTHREAD_H
PICFLAGS     = -fPIC
LDFLAGS      = -lpthread
AR           = ar
RANLIB       = ranlib
LIB_FILE     = libucd.a
SO_FILE      = libucd.so
SO_NAME      = libucd.so.0
SOFLAGS      = -shared -Wl,-soname,$(SO_NAME)

HOST_CC      = cc
HOST_CFLAGS  = -g -O -I. -W -Wall
HOST_LDFLAGS =
HOST_LIBS    =

PERL         = time perl

INSTALL	     = install -c
INSTALL_LIB  = $(INSTALL) -m 755
INSTALL_DATA = $(INSTALL) -m 644

prefix	     = /usr/local
libdir	     = $(prefix)/lib
mandir	     = $(prefix)/man
includedir   = $(prefix)/include
